<%- if controller_name != 'sessions' %>
  <%= link_to "ログイン", login_path , class:'mb-5 inline-block text-blue-500 hover:text-blue-700 font-semibold' %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "会員登録", signup_path , class: 'mb-5 inline-block text-blue-500 hover:text-blue-700 font-semibold' %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "パスワードを忘れた", new_password_path(resource_name), class:'mb-5 inline-block text-blue-500 hover:text-blue-700 font-semibold'  %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "確認メールが届いていませんか？", new_confirmation_path(resource_name),class: 'mb-5 inline-block text-blue-500 hover:text-blue-700 font-semibold' %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name),class:'mb-5 inline-block text-blue-500 hover:text-blue-700 font-semibold' %><br />
<% end %>


