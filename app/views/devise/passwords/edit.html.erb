<div class="relative overflow-hidden mt-0 md:mt-24"> <!-- ← ③ スマホは mt-0 -->
  <div class="max-w-xl w-full mx-auto pt-4 pb-10 px-4 sm:px-6 md:px-8 flex justify-center">
    <div class="w-full bg-white border rounded-2xl shadow-xl p-8 flex flex-col items-center">
      <h2 class="text-center text-2xl sm:text-3xl font-bold text-gray-800 mb-4 dark:text-neutral-200">
        パスワードを変更する
      </h2>

      <p class="text-center text-gray-600 dark:text-neutral-400 mb-6 text-base">
        新しいパスワードを入力してください。
      </p>

      <%= form_for(resource, as: resource_name,
                   url: password_path(resource_name),
                   html: { method: :put, class: "w-full space-y-6" }) do |f| %>

        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <!-- パスワード -->
        <div>
          <%= f.label :password, "新しいパスワード",
                class: "block text-sm font-medium mb-2 dark:text-white" %>

          <% if @minimum_password_length %>
            <p class="text-sm text-gray-500 dark:text-neutral-400 mb-2">
              (<%= @minimum_password_length %>文字以上)
            </p>
          <% end %>

          <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
                class: "py-3 px-4 block w-full border border-gray-300 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 transition" %>
        </div>

        <!-- パスワード確認 -->
        <div>
          <%= f.label :password_confirmation, "パスワード確認",
                class: "block text-sm font-medium mb-2 dark:text-white" %>

          <%= f.password_field :password_confirmation, autocomplete: "new-password",
                class: "py-3 px-4 block w-full border border-gray-300 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 transition" %>
        </div>

        <!-- 送信ボタン：① ボタン下に余白を確保 -->
        <div>
          <%= f.submit "パスワードを変更する",
                class: "w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-lg border-transparent bg-blue-600 text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition disabled:opacity-50 disabled:pointer-events-none" %>
        </div>
      <% end %>

    
    </div>
  </div>
</div>
