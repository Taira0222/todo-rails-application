<!-- Hero セクション開始 -->
<div class="relative overflow-hidden sm:mt-2 md:mt-24">
  <div class="max-w-xl w-full mx-auto pt-2 pb-4 px-2 sm:pt-4 sm:pb-10 sm:px-6 md:px-8 flex justify-center">
    <div class="w-full bg-white border rounded-2xl shadow-xl sm:p-8 p-4 flex flex-col items-center">
      <!-- 見出し -->
      <h2 class="text-center text-2xl sm:text-3xl font-bold text-gray-800 mb-2 sm:mb-4 dark:text-neutral-200">ログイン</h2>
      <p class="text-center text-gray-600 dark:text-neutral-400 text-sm sm:text-base mb-2">
        TodoAppでタスク管理を始めましょう。
      </p>

      <!-- Googleログインボタン -->
      <div class="mt-5 grid mb-3 w-full">
        <button type="button"
          class="w-full py-2 sm:py-3 px-2 sm:px-4 inline-flex justify-center items-center gap-x-3 text-sm font-medium rounded-lg border border-gray-200 bg-white text-gray-800 shadow-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-200 disabled:opacity-50 dark:bg-neutral-900 dark:border-neutral-700 dark:text-white dark:hover:bg-neutral-800">
          <svg class="w-5 h-5 mr-2" width="20" height="20" viewBox="0 0 46 47" fill="none">
            <path d="M46 24.0287C46 22.09 45.8533 20.68 45.5013 19.2112H23.4694V27.9356H36.4069C36.1429 30.1094 34.7347 33.37 31.5957 35.5731L31.5663 35.8669L38.5191 41.2719L38.9885 41.3306C43.4477 37.2181 46 31.1669 46 24.0287Z" fill="#4285F4"/>
            <path d="M23.4694 47C29.8061 47 35.1161 44.9144 39.0179 41.3012L31.625 35.5437C29.6301 36.9244 26.9898 37.8937 23.4987 37.8937C17.2793 37.8937 12.0281 33.7812 10.1505 28.1412L9.88649 28.1706L2.61097 33.7812L2.52296 34.0456C6.36608 41.7125 14.287 47 23.4694 47Z" fill="#34A853"/>
            <path d="M10.1212 28.1413C9.62245 26.6725 9.32908 25.1156 9.32908 23.5C9.32908 21.8844 9.62245 20.3275 10.0918 18.8588V18.5356L2.75765 12.8369L2.52296 12.9544C0.909439 16.1269 0 19.7106 0 23.5C0 27.2894 0.909439 30.8731 2.49362 34.0456L10.1212 28.1413Z" fill="#FBBC05"/>
            <path d="M23.4694 9.07688C27.8699 9.07688 30.8622 10.9863 32.5344 12.5725L39.1645 6.11C35.0867 2.32063 29.8061 0 23.4694 0C14.287 0 6.36607 5.2875 2.49362 12.9544L10.0918 18.8588C11.9987 13.1894 17.25 9.07688 23.4694 9.07688Z" fill="#EB4335"/>
          </svg>
          Googleでログイン
        </button>
      </div>
      
      <!-- 区切り線 -->
      <div class="py-3 sm:py-5 flex items-center text-xs sm:text-sm text-gray-400 uppercase w-full before:flex-1 before:border-t before:border-gray-200 before:mr-3 sm:before:mr-6 after:flex-1 after:border-t after:border-gray-200 after:ml-3 sm:after:ml-6 dark:text-neutral-500 dark:before:border-neutral-700 dark:after:border-neutral-700">
        または
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name),
            html: { class: "space-y-3 sm:space-y-5 w-full" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, class: "block text-xs sm:text-sm font-medium mb-1 sm:mb-2 dark:text-white" %>
          <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                class: "py-2 sm:py-3 px-2 sm:px-4 block w-full border border-gray-300 rounded-lg text-xs sm:text-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 transition" %>
        </div>
        <div>
          <%= f.label :password, class: "block text-xs sm:text-sm font-medium mb-1 sm:mb-2 dark:text-white" %>
          <%= f.password_field :password,
                autocomplete: "current-password",
                class: "py-2 sm:py-3 px-2 sm:px-4 block w-full border border-gray-300 rounded-lg text-xs sm:text-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 transition" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center mb-2 sm:mb-3">
            <%= f.check_box :remember_me, class: "mr-2 rounded border-gray-300 focus:ring-blue-500" %>
            <%= f.label :remember_me, "ログイン状態を保持する", class: "text-xs sm:text-sm text-gray-700 dark:text-neutral-400" %>
          </div>
        <% end %>
        <div>
          <%= f.submit "ログイン",
                class: "w-full py-2 sm:py-3 px-2 sm:px-4 inline-flex justify-center items-center gap-x-2 text-xs sm:text-sm font-medium rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition disabled:opacity-50 disabled:pointer-events-none" %>
        </div>
      <% end %>

      <div class="mt-3 sm:mt-5 text-center w-full">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
<!-- Hero セクション終了 -->
